<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="FocusRect">
        <Setter
            Property="Control.Template">
            <Setter.Value>
                <ControlTemplate>
                    <Border BorderBrush="{DynamicResource Light.StrokeColor.FocusStroke.Outer}" BorderThickness="2" CornerRadius="4" SnapsToDevicePixels="True">
                        <Border BorderBrush="{DynamicResource Light.StrokeColor.FocusStroke.Inner}" BorderThickness="1" CornerRadius="4" SnapsToDevicePixels="True"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="Body" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource Light.FillColor.Text.Primary}"/>
        <Setter Property="Margin" Value="12,0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="FontFamily" Value="./../../Fonts/#Segoe UI Variable Static Display"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>
    <Style x:Key="Subtitle" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource Light.FillColor.Text.Secondary}"/>
        <Setter Property="Margin" Value="20"/>
        <Setter Property="FontFamily" Value="./../../Fonts/#Segoe UI Variable Static Display"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>
    <Style x:Key="Title" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource Light.FillColor.Text.Primary}"/>
        <Setter Property="Margin" Value="12"/>
        <Setter Property="FontFamily" Value="./../../Fonts/#Segoe UI Variable Static Display"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    <Style x:Key="Text.Title" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource Light.FillColor.Text.Primary}"/>
        <Setter Property="Margin" Value="12"/>
        <Setter Property="FontFamily" Value="./../../Fonts/#Segoe UI Variable Static Display"/>
        <Setter Property="FontSize" Value="28"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    <Style x:Key="Text.Subtitle" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource Light.FillColor.Text.Primary}"/>
        <Setter Property="Margin" Value="12"/>
        <Setter Property="FontFamily" Value="./../../Fonts/#Segoe UI Variable Static Display"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>
    <Style x:Key="Text.BodyStrong" TargetType="{x:Type TextBlock}" >
        <Setter Property="Foreground" Value="{DynamicResource Light.FillColor.Text.Primary}" />
        <Setter Property="Margin" Value="12" />
        <Setter Property="FontFamily" Value="./../../Fonts/#Segoe UI Variable Static Display" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>
    <Style x:Key="Text.Body" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource Light.FillColor.Text.Primary}"/>
        <Setter Property="Margin" Value="12"/>
        <Setter Property="FontFamily" Value="./../../Fonts/#Segoe UI Variable Static Display"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Regular"/>
    </Style>
</ResourceDictionary>