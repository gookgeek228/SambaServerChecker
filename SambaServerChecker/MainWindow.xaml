<Window x:Class="SambaServerChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SambaServerChecker"
        mc:Ignorable="d"
        FontFamily="/Resources/Fonts/#SegoeUI">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ResourceDictionaries/Brushes.xaml"/>
                <ResourceDictionary Source="/Resources/ResourceDictionaries/UI/BasicInput.xaml"/>
                <ResourceDictionary Source="/Resources/ResourceDictionaries/UI/CommandBar.xaml"/>
                <ResourceDictionary Source="/Resources/ResourceDictionaries/UI/GridSplitter.xaml"/>
                <ResourceDictionary Source="/Resources/ResourceDictionaries/UI/ListsAndCollections.xaml"/>
                <ResourceDictionary Source="/Resources/ResourceDictionaries/UI/Primitives.xaml"/>
                <ResourceDictionary Source="/Resources/ResourceDictionaries/UI/Scrolling.xaml"/>
                <ResourceDictionary Source="/Resources/ResourceDictionaries/UI/TextFields.xaml"/>
                <ResourceDictionary Source="/Resources/ResourceDictionaries/UI/TitleBar.xaml"/>
                <ResourceDictionary Source="/Resources/ResourceDictionaries/UI/TreeView.xaml"/>
                <ResourceDictionary Source="/Resources/ResourceDictionaries/UI/Window.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Style="{StaticResource ScrollViewer}">
        <StackPanel Margin="60" Orientation="Vertical">
            <!-- Секция состояния подключения -->
            <TextBlock Text="{Binding ConnectionStatus}" 
                      FontSize="14" Margin="0,0,0,20"/>

            <!-- Секция системной информации -->
            <GroupBox Header="Системные ресурсы" FontSize="14" Margin="0,10,0,40">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="400" Style="{StaticResource ScrollViewer}">
                    <ListView ItemsSource="{Binding SystemStatusLines}" Style="{StaticResource ListView}">
                        <ListView.ItemTemplate >
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="12"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </GroupBox>

            <!-- Секция сетевой информации -->
            <GroupBox Header="Сетевые параметры" FontSize="14" Margin="0,10,0,40">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="400" Style="{StaticResource ScrollViewer}">
                    <ListView ItemsSource="{Binding NetworkStatusLines}" Style="{StaticResource ListView}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="12"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </GroupBox>

            <!-- Секция CTS статистики -->
            <GroupBox Header="CTS Статистика" FontSize="14" Margin="0,10,0,40">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="400" Style="{StaticResource ScrollViewer}">
                    <ListView ItemsSource="{Binding CtsStatsLines}" Style="{StaticResource ListView}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="12"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </GroupBox>

            <!-- Секция содержимого /root -->
            <GroupBox Header="Содержимое /root" FontSize="14" Margin="0,10,0,40">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Height="400" Style="{StaticResource ScrollViewer}">
                    <ListView ItemsSource="{Binding RootDirectoryLines}" Style="{StaticResource ListView}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="12"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</Window>
