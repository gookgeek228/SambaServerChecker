<Window x:Class="SambaServerChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SambaServerChecker"
        mc:Ignorable="d"
        FontFamily="/Resources/Fonts/#SegoeUI">
    
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ResourceDictionaries/Brushes.xaml"/>
                <ResourceDictionary Source="/Resources/ResourceDictionaries/UI/BasicInput.xaml"/>
                <ResourceDictionary Source="/Resources/ResourceDictionaries/UI/CommandBar.xaml"/>
                <ResourceDictionary Source="/Resources/ResourceDictionaries/UI/GridSplitter.xaml"/>
                <ResourceDictionary Source="/Resources/ResourceDictionaries/UI/ListsAndCollections.xaml"/>
                <ResourceDictionary Source="/Resources/ResourceDictionaries/UI/Primitives.xaml"/>
                <ResourceDictionary Source="/Resources/ResourceDictionaries/UI/Scrolling.xaml"/>
                <ResourceDictionary Source="/Resources/ResourceDictionaries/UI/TextFields.xaml"/>
                <ResourceDictionary Source="/Resources/ResourceDictionaries/UI/TitleBar.xaml"/>
                <ResourceDictionary Source="/Resources/ResourceDictionaries/UI/TreeView.xaml"/>
                <ResourceDictionary Source="/Resources/ResourceDictionaries/UI/Window.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10">
        <TabControl>

            <TabItem Header="Сервер" FontSize="14" Width="80">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="IP-адрес сервера:" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="1" Text="{Binding ServerIp}" Margin="0,0,0,10"
                             Style="{StaticResource TextBox}"
                             Background="{StaticResource Light.FillColor.Control.Default}" 
                             Foreground="{StaticResource Light.FillColor.Text.Primary}"/>

                    <TextBlock Grid.Row="2" Text="Имя пользователя:" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                    <TextBox Grid.Row="3" Text="{Binding Username}" Margin="0,0,0,10"
                             Style="{StaticResource TextBox}"
                             Background="{StaticResource Light.FillColor.Control.Default}" 
                             Foreground="{StaticResource Light.FillColor.Text.Primary}"/>

                    <TextBlock Grid.Row="4" Text="Пароль:" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                    <PasswordBox Grid.Row="5" x:Name="PasswordBox" Margin="0,5,0,5" Style="{StaticResource PasswordBox}"/>

                    <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Подключиться" 
                                Command="{Binding ConnectCommand}"
                                Width="120"
                                Margin="0,0,10,0"
                                Style="{StaticResource Button.Accent.IconBefore}"
                                Background="{StaticResource Light.FillColor.Accent.Default}" 
                                Foreground="{StaticResource Light.FillColor.TextOnAccent.Primary}" />
                        <TextBlock Text="{Binding ConnectionStatus}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem Header="Система" IsEnabled="{Binding CanAccessNetworkAndSystemTabs}" FontSize="14"  Width="80">
                <StackPanel>
                    <TextBlock Text="Информация о системе" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ListView ItemsSource="{Binding SystemStatusLines}" Style="{StaticResource ListView}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="12"/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </StackPanel>
            </TabItem>


            <TabItem Header="Сеть" IsEnabled="{Binding CanAccessNetworkAndSystemTabs}" FontSize="14"  Width="80">
                <StackPanel>
                    <TextBlock Text="Информация о сети" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ListView ItemsSource="{Binding NetworkStatusLines}" Style="{StaticResource ListView}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" FontSize="12"/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </ScrollViewer>
                </StackPanel>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
